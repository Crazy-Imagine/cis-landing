---
import ResponsiveContainer from '../ResponsiveContainer.astro';
import Typography from '../Typography.astro';
import LandingCarousel from './LandingCarousel.astro';
import OurTalentCard from './OurTalentCard.astro';
import { OUR_TALENTS } from '@/utils/staff-augmentation-info';
---

<ResponsiveContainer background="bulbs" class="relative z-50">
  <Typography
    class:list={[
      'mb-10 text-center capitalize',
      {
        'text-primary': false,
        'text-white': true,
      },
    ]}
    as="h2"
    variant="h2"
  >
    Conoce alguno de nuestros talentos
  </Typography>

  <LandingCarousel>
    {OUR_TALENTS.map((talent) => <OurTalentCard talent={talent} />)}
  </LandingCarousel>

  <slot name="cta" />
</ResponsiveContainer>
