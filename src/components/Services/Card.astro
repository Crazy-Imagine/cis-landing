---
import Typography from '@/components/Typography.astro';
---

<div
  class="relative flex min-h-[500px] w-full max-w-[600px] flex-col justify-end gap-3 bg-white p-14 shadow-md"
>
  <slot name="icon" />
  <Typography class="text-wrap !text-2xl text-primary" as="p" variant="accent">
    <slot name="title" />
  </Typography>
  <slot name="content" />
  <slot name="link" />
</div>
