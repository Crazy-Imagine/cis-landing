---
import Hero from '@/sections/Hero.astro';
import Layout from '@/layouts/Layout.astro';
import fetchApi from '@/lib/strapi';
import type { SEO } from '@/types/strapi/SEO';
import WorkWithUsSection from '@/sections/work-with-us-section.astro';

const seo = await fetchApi<SEO>({
  endpoint: 'work-with-us-page',
  params: {
    locale: Astro.currentLocale,
    populate: {
      seo: true,
    },
  },
});
---

<Layout
  title={seo.data.attributes.seo.metaTitle}
  description={seo.data.attributes.seo.metaDescription}
>
  <Hero page="work-with-us" />

  <WorkWithUsSection />
</Layout>
