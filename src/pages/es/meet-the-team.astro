---
import Hero from '@/sections/Hero.astro';
import Layout from '@/layouts/Layout.astro';
import LinkPill from '@/components/LinkPill.astro';
import TheTeam from '@/sections/TheTeam.astro';
import fetchApi from '@/lib/strapi';
import type { PageInfo } from '@/types/strapi/PageInfo';
import { getLangFromUrl, useTranslatedPath, useTranslations } from '@/i18n/utils';

const pageInfo = await fetchApi<PageInfo>({
  endpoint: 'meet-team-page',
  params: {
    locale: Astro.currentLocale,
    populate: {
      seo: true,
      hero: true,
    },
  },
});

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Layout
  title={pageInfo.data.attributes.seo.metaTitle}
  description={pageInfo.data.attributes.seo.metaDescription}
>
  <Hero
    page="meet-the-team"
    title={pageInfo.data.attributes.hero.title}
    subtitle={pageInfo.data.attributes.hero.subtitle}
  >
    <LinkPill
      slot="button"
      variant="outlined"
      href={translatePath('/contact-us', lang)}
      aria-label={t('aria.contact-us-link')}
    >
      {t('common.contact-us')}
    </LinkPill>
  </Hero>

  <TheTeam />
</Layout>
